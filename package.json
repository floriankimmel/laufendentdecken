{
    "name": "laufendentdecken",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "eslint-config-custom": "*",
        "prettier": "latest",
        "turbo": "^1.10.12"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "packageManager": "npm@9.5.0"
}
